extends ../layouts/default.pug

block main
    if (permissions.includes("contact-reply"))
        h1.box-title #{pageTitle}

        .section-8
            form#contact-send-mail-form
                .inner-group
                    label(class="inner-label" for="email") Email Liên hệ
                    input(type="text" id="email" name="email" value=contactDetail.email readonly)
                .inner-group
                    label(class="inner-label" for="title") Tiêu đề Mail
                    input(type="text" id="title" name="title")
                .inner-group.inner-two-col
                    label(class="inner-label" for="content") Nội dung Mail
                    textarea(id="content" textarea-mce name="content")
                .inner-button.inner-two-col
                    button Gửi phản hồi
            .inner-back
                a(href=`/${pathAdmin}/contact/list`) Quay lại danh sách