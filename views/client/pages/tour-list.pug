  .section-9
    .container
      .inner-wrap
        .inner-left
          // Box Filter
          .box-filter
            .inner-head
              .inner-title Bộ Lọc
              i.fa-solid.fa-filter
            .inner-body
              .inner-group
                .inner-label Điểm đi
                select(
                  name="locationFrom" 
                  aria-label="x"
                  )
                  option(value="") -- Chọn điểm đi --
                  each item in cityList
                    option(value=item.id) #{item.name}
                    //- option(value="") Đà Nẵng
                    //- option(value="") Nha Trang
              .inner-group
                .inner-label Điểm đến
                select(
                  name="locationTo" 
                  aria-label="x"
                  )
                  option(value="") -- Chọn điểm đến --
                  each item in cityList
                    option(value=item.name) #{item.name}
                  //- option(value="") Hà Nội
                  //- option(value="") Đà Nẵng
                  //- option(value="") Nha Trang
              .inner-group
                .inner-label Ngày khởi hành
                input(
                  type="date" 
                  aria-label="x"
                  name="departureDate"
                  )
              .inner-group
                .inner-label Số Lượng Hành Khách
                .inner-input-list
                  .inner-input-item
                    .inner-label Người lớn:
                    input(
                      value="0" 
                      type="number" 
                      name="stockAdult"
                      aria-label="x"
                      )
                  .inner-input-item
                    .inner-label Trẻ em:
                    input(
                      value="0" 
                      type="number" 
                      name="stockChildren"
                      aria-label="x"
                      )
                  .inner-input-item
                    .inner-label Em bé:
                    input(
                      value="0" 
                      type="number"
                      name="stockBaby"
                      aria-label="x"
                      )
              .inner-group
                .inner-label Mức giá
                select(
                  name="price" 
                  aria-label="x"
                  )
                  option(value="") -- Chọn khoảng giá --
                  option(value="0-999999") Dưới 1tr
                  option(value="1000000-3000000") Từ 1tr đến 3tr
                  option(value="3000000-6000000") Từ 3tr đến 6tr
                  option(value="6000000-10000000") Từ 6tr đến 10tr
                  option(value="10000000-1000000000") Trên 10tr
              .inner-group
